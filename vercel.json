{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/mock" },
    { "source": "/:path((?!api).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Vercel-Mock-Mode",
          "value": "true"
        }
      ]
    }
  ],
  "env": {
    "VITE_USE_MOCK": "true"
  }
}